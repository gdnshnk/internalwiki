# Database
DATABASE_URL=postgresql://internalwiki:internalwiki_dev@localhost:5432/internalwiki
PG_SSL=false
PG_SSL_ALLOW_SELF_SIGNED=false

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Encryption & Security
INTERNALWIKI_ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-in-production
INTERNALWIKI_SESSION_SIGNING_KEY=your-32-byte-session-key-here-change-in-production

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# AI Provider (OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Optional: Enable debug auth in development
INTERNALWIKI_ENABLE_DEBUG_AUTH=false

# Optional: Version
INTERNALWIKI_VERSION=0.1.0
